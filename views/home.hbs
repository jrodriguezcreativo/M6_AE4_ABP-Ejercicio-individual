{{> header}}

<section class="home">
  <div class="hero">
    <img class="foto-perfil" src="/img/ilustracion.jpg" alt="">
    <div>
      <h1>{{nombre}}</h1>
      <p>{{descripcion}}</p>
    </div>
  </div>
  <h2>Proyectos</h2>

  {{#each proyectos}}
    <div class="proyecto">
      {{#if this.img}}
        <img src="{{this.img}}">
      {{/if}}
      <div>
        <h3>{{this.nombre}}</h3>
        <p>{{this.descripcion}}</p>

        <a href="/projects" class="boton-proyecto">Ver detalles</a>
      </div>
    </div>
  {{/each}}
</section>

{{> footer}}
